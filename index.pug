doctype html
html(lang="en")
  head
    include includes/meta
    title Kasper | One Page PSD Template
    include includes/links
  body
    //- START MAIN
    main
      .container
        -var list=["HOME", "SERVICES", "PORTFOLIO", "ABOUT", "PRICING", "CONTACT"]
        nav
          .logo: img(src="image/logo.png", alt="logo")
          ul.list-bar
            for item in list 
              li: a(href="#")=item
          .menu #[i(class="fas fa-bars fa-2x")]
          ul.list-menu
            for item in list 
              li: a(href="#")=item
