    section.pricing
      .container 
        +several-header("pricing", "Curabitur arcu erat, accumsan id imperdiet et, porttitor at sem. Mauris", "blandit aliquet elit, eget tincidunt.")
        article
          .all-table
            +repeat-table("basic", "19", "Feature No 1", "Extra Feature", "Extra Feature No 2", "Feature")
